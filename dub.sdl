configuration "library" {
    dependency "sdlang-d" version="<=0.10.0"
    dependency "dyaml-dlang-tour" version="~>0.5.5"
    dependency "vibe-d:data" version="~>0.7.30"
    
    targetType "library"
    targetPath "out"
}

configuration "bareLibrary" {
    targetType "library"
    targetPath "out"
}

configuration "test" {
    dependency "sdlang-d" version="<=0.10.0"
    dependency "dyaml-dlang-tour" version="~>0.5.5"
    dependency "vibe-d:data" version="~>0.7.30"

    dependency "d-unit" version="~>0.8.1"

    targetPath "out/test"
    targetType "executable"
  
    versions "UnitTestVersion" 

